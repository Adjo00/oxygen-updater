<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/bannerLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/appBarBackground"
			android:padding="@dimen/padding_default"
			android:visibility="gone"
			tools:visibility="visible">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@string/icon"
				android:src="@drawable/info" />

			<TextView
				android:id="@+id/bannerTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/padding_half"
				android:layout_marginEnd="@dimen/padding_default"
				android:textColor="@color/white"
				tools:text="@string/update_information_banner_already_latest" />
		</LinearLayout>

		<ProgressBar
			android:id="@+id/updateInformationProgressBar"
			style="?android:progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_gravity="center"
			android:layout_weight="1" />

		<ViewStub
			android:id="@+id/updateInformationStub"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/update_information"
			tools:visibility="visible" />

		<ViewStub
			android:id="@+id/systemIsUpToDateStub"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/system_is_up_to_date"
			tools:visibility="visible" />
	</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
