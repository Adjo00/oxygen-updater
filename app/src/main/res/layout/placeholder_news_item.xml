<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/spacing_default">

	<View
		android:id="@+id/newsItemImagePlaceholder"
		android:layout_width="@dimen/spacing_4x"
		android:layout_height="@dimen/spacing_4x"
		android:alpha=".1"
		android:background="@drawable/placeholder_image"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/newsItemPlaceholder"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_half"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toEndOf="@id/newsItemImagePlaceholder"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/newsItemSubtitlePlaceholder"
		android:layout_width="0dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/newsItemImagePlaceholder"
		app:layout_constraintTop_toBottomOf="@id/newsItemPlaceholder" />
</androidx.constraintlayout.widget.ConstraintLayout>
