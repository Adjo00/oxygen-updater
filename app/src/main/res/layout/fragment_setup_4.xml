<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="@dimen/spacing_default"
	android:paddingTop="@dimen/spacing_default"
	android:paddingEnd="@dimen/spacing_default"
	android:paddingBottom="@dimen/spacing_default">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/introduction_step_4_image"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:layout_centerHorizontal="true"
			android:contentDescription="@string/install_guide_image_description"
			android:src="@drawable/cloud_download"
			android:tint="?colorPrimary" />

		<TextView
			android:id="@+id/introduction_step_4_header_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/introduction_step_4_image"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/spacing_default"
			android:fontFamily="@font/google_sans_medium"
			android:gravity="center_horizontal"
			android:text="@string/setup_page_4_title"
			android:textSize="@dimen/typography_title" />

		<Spinner
			android:id="@+id/introduction_step_4_update_method_dropdown"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/introduction_step_4_header_text"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/spacing_default" />

		<ProgressBar
			android:id="@+id/introduction_step_4_update_method_progress_bar"
			style="?android:progressBarStyleSmall"
			android:layout_width="@dimen/spacing_1_5x"
			android:layout_height="@dimen/spacing_1_5x"
			android:layout_below="@id/introduction_step_4_header_text"
			android:layout_marginTop="@dimen/spacing_default"
			android:layout_toEndOf="@id/introduction_step_4_update_method_dropdown"
			android:visibility="gone"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/introduction_step_4_text_block_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/introduction_step_4_update_method_dropdown"
			android:layout_marginTop="@dimen/spacing_default"
			android:text="@string/setup_page_4_text"
			android:textColor="?android:textColorSecondary" />


	</RelativeLayout>
</ScrollView>
