<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fadingEdge="vertical"
	android:fadingEdgeLength="@dimen/spacing_4x"
	android:orientation="vertical"
	android:requiresFadingEdge="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/spacing_default">

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/automaticInstallCard"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_gravity="center">

			<TextView
				android:id="@+id/automaticInstallTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_half"
				android:fontFamily="@font/google_sans_medium"
				android:text="@string/install_method_chooser_automatic_title"
				android:textAlignment="center" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/automaticInstallImage"
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:layout_marginStart="@dimen/spacing_default"
					android:layout_marginTop="66dp"
					android:contentDescription="@string/install_method_chooser_automatic_image"
					android:src="@drawable/auto"
					android:tint="?colorPrimary" />

				<TextView
					android:id="@+id/automaticInstallExplanation"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_marginStart="@dimen/spacing_half"
					android:layout_marginTop="@dimen/spacing_2x"
					android:layout_marginEnd="@dimen/spacing_half"
					android:layout_marginBottom="@dimen/spacing_2x"
					android:layout_toEndOf="@id/automaticInstallImage"
					android:gravity="center_vertical"
					android:text="@string/install_method_chooser_automatic_description" />
			</RelativeLayout>
		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/manualInstallCard"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_gravity="center"
			android:layout_marginTop="@dimen/spacing_default">

			<TextView
				android:id="@+id/manualInstallTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_half"
				android:fontFamily="@font/google_sans_medium"
				android:text="@string/install_method_chooser_manual_title"
				android:textAlignment="center" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/manualInstallImage"
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:layout_marginStart="@dimen/spacing_default"
					android:layout_marginTop="66dp"
					android:contentDescription="@string/install_method_chooser_manual_image"
					android:src="@drawable/list"
					android:tint="?colorPrimary" />

				<TextView
					android:id="@+id/manualInstallExplanation"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_marginStart="@dimen/spacing_half"
					android:layout_marginTop="@dimen/spacing_2x"
					android:layout_marginEnd="@dimen/spacing_half"
					android:layout_marginBottom="@dimen/spacing_2x"
					android:layout_toEndOf="@id/manualInstallImage"
					android:gravity="center_vertical"
					android:text="@string/install_method_chooser_manual_description" />
			</RelativeLayout>
		</com.google.android.material.card.MaterialCardView>
	</LinearLayout>
</androidx.core.widget.NestedScrollView>
