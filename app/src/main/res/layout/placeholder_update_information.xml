<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/spacing_default">

	<View
		android:id="@+id/oxygenOsVersionPlaceholder"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_half"
		android:alpha=".2"
		android:background="@drawable/placeholder_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/changelogPlaceholder1"
		android:layout_width="@dimen/spacing_4x"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_1_5x"
		android:alpha=".15"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/oxygenOsVersionPlaceholder" />

	<View
		android:id="@+id/changelogPlaceholder2"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/changelogPlaceholder1" />

	<View
		android:id="@+id/changelogPlaceholder3"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/changelogPlaceholder2" />

	<View
		android:id="@+id/changelogPlaceholder4"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/changelogPlaceholder3" />

	<View
		android:id="@+id/changelogPlaceholder5"
		android:layout_width="@dimen/spacing_4x"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".15"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/changelogPlaceholder4" />

	<View
		android:id="@+id/changelogPlaceholder6"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_half"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/changelogPlaceholder5" />
</androidx.constraintlayout.widget.ConstraintLayout>
