<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/spacing_default">

	<View
		android:id="@+id/installGuideImagePlaceholder"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:alpha=".1"
		android:layout_marginTop="@dimen/spacing_default"
		android:background="@drawable/placeholder_image"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/installGuideHeaderPlaceholder"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".2"
		android:background="@drawable/placeholder_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideImagePlaceholder" />

	<View
		android:id="@+id/installGuideTextPlaceholder1"
		android:layout_width="0dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_1_5x"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideHeaderPlaceholder" />

	<View
		android:id="@+id/installGuideTextPlaceholder2"
		android:layout_width="200dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideTextPlaceholder1" />

	<View
		android:id="@+id/installGuideTextPlaceholder3"
		android:layout_width="0dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideTextPlaceholder2" />

	<View
		android:id="@+id/installGuideTextPlaceholder4"
		android:layout_width="0dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideTextPlaceholder3" />

	<View
		android:id="@+id/installGuideTextPlaceholder5"
		android:layout_width="100dp"
		android:layout_height="@dimen/spacing_half"
		android:layout_marginStart="@dimen/spacing_default"
		android:layout_marginTop="@dimen/spacing_default"
		android:alpha=".1"
		android:background="@drawable/placeholder_text"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/installGuideTextPlaceholder4" />
</androidx.constraintlayout.widget.ConstraintLayout>
