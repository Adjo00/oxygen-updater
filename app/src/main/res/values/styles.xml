<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.Oxygen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorSecondaryVariant">@color/colorSecondary</item>
		<item name="colorAccent">@color/colorSecondary</item>
		<item name="android:colorAccent">@color/colorSecondary</item>
		<item name="colorError">@color/colorError</item>

		<item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
		<item name="tabStyle">@style/TabLayoutStyle</item>
		<item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
		<item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
		<item name="android:buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
		<item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>

		<item name="colorOnBackground">?colorOnSurface</item>

		<item name="android:windowBackground">?colorSurface</item>

		<!-- For visual continuity between the app and the navigation bar, set to the window background -->
		<item name="android:navigationBarColor">?colorSurface</item>
		<item name="android:statusBarColor">@color/statusBarColor</item>

		<item name="android:textColorTertiary">@color/foreground</item>
		<item name="android:textColorTertiaryInverse">?android:windowBackground</item>

		<item name="android:lineSpacingExtra">4dp</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="android:windowContentTransitions">true</item>
	</style>

	<!-- Used in activities that support edge-to-edge UI -->
	<style name="Theme.Oxygen.FullScreen">
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="AppBarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Surface">
		<item name="android:background">@color/appBarBackground</item>
	</style>

	<style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored" />

	<style name="ToolbarPopupStyle" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:textColorPrimary">@color/foreground</item>
	</style>

	<style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="android:navigationBarColor">?colorSurface</item>
		<item name="bottomSheetStyle">@style/BottomSheetStyle</item>
	</style>

	<style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
		<!-- To cancel the background lightening effect for dark themes -->
		<item name="android:elevation">0dp</item>
		<item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
		<item name="backgroundTint">@color/background</item>
	</style>

	<style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
		<item name="cornerSize">@dimen/spacing_default</item>
	</style>

	<style name="Theme.Oxygen.Switch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorAccent">@color/colorPrimary</item>
	</style>

	<style name="Widget.Design.SuperpoweredCollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
		<!-- Same as expandedTitleMargin, defined in Widget.Design.CollapsingToolbar -->
		<item name="expandedSubtitleMargin">32dp</item>
		<!-- Custom scrims to match @color/appBarBackground -->
		<item name="contentScrim">@color/appBarBackground</item>
		<item name="statusBarScrim">@color/appBarBackground</item>
	</style>

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.ExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
		<item name="android:textSize">@dimen/typography_headline</item>
	</style>

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.ExpandedTitle.Inverse">
		<item name="android:textColor">?android:textColorPrimaryInverse</item>
	</style>

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.ExpandedSubtitle" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle" />

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.ExpandedSubtitle.Inverse" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle.Inverse" />

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.CollapsedTitle" parent="android:TextAppearance.Material.Widget.ActionBar.Title" />

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.CollapsedSubtitle" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle">
		<item name="android:textSize">@dimen/typography_body</item>
	</style>

	<style name="TextAppearance.Design.SuperpoweredCollapsingToolbar.CollapsedSubtitle.Inverse">
		<item name="android:textColor">?android:textColorSecondaryInverse</item>
	</style>

</resources>
